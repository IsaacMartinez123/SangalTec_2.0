@model SangalTec.Models.Entities.Producto

@{
    Layout = null;
}

<form>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="ProductoId" class="control-label"></label>
            <br />
            @Model.ProductoId
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="UrlImagen" class="control-label"></label>
            <br />
            <img src="../@Model.UrlImagen" width="100px" height="50px">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="Cantidad" class="control-label"></label>
            <br />
            @Model.Cantidad
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="Precio" class="control-label"></label>
            <br />
            @Model.Precio
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="Categoria" class="control-label"></label>
            <br />
            @Model.Categoria.Nombre
        </div>
    </div>

</form>
<script src="~/js/site.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")